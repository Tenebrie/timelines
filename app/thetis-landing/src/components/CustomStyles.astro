---
import '@fontsource-variable/inter'
---

<style is:inline>
	:root {
		--aw-font-sans: 'Inter Variable';
		--aw-font-serif: 'Inter Variable';
		--aw-font-heading: 'Inter Variable';

		--aw-color-primary: rgb(139 92 246);
		--aw-color-secondary: rgb(99 102 241);
		--aw-color-accent: rgb(244 114 182);

		--aw-color-text-heading: rgb(0 0 0);
		--aw-color-text-default: rgb(16 16 16);
		--aw-color-text-muted: rgb(16 16 16 / 66%);
		--aw-color-bg-page: rgb(255 255 255);

		--aw-color-bg-page-dark: rgb(7 7 20);

		::selection {
			background-color: rgb(139 92 246 / 30%);
		}
	}

	.dark {
		--aw-font-sans: 'Inter Variable';
		--aw-font-serif: 'Inter Variable';
		--aw-font-heading: 'Inter Variable';

		--aw-color-primary: rgb(167 139 250);
		--aw-color-secondary: rgb(129 140 248);
		--aw-color-accent: rgb(244 114 182);

		--aw-color-text-heading: rgb(248 250 252);
		--aw-color-text-default: rgb(226 232 240);
		--aw-color-text-muted: rgb(226 232 240 / 60%);
		--aw-color-bg-page: rgb(7 7 20);

		::selection {
			background-color: rgb(139 92 246 / 40%);
			color: snow;
		}
	}
</style>
