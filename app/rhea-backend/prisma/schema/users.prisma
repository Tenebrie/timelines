enum UserLevel {
  Free
  Premium
  Admin
}

enum CollaboratorAccess {
  ReadOnly
  Editing
}

model User {
  id                  String    @id @unique @default(uuid())
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @default(now()) @updatedAt
  deletedAt           DateTime?
  deletionScheduledAt DateTime?

  email    String @unique
  username String
  password String
  bio      String @default("")

  level         UserLevel          @default(Free)
  notifications UserAnnouncement[]

  worlds          World[]
  calendars       Calendar[]
  collaboratingIn CollaboratingUser[]

  assets           Asset[]
  favoriteIconSets UserFavoriteIconSet[]

  avatar   Asset?  @relation("UserAvatar", fields: [avatarId], references: [id])
  avatarId String? @unique
}

model CollaboratingUser {
  user   User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  world  World              @relation(fields: [worldId], references: [id], onDelete: Cascade)
  access CollaboratorAccess

  userId  String
  worldId String

  @@id([userId, worldId])
}
