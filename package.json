{
	"name": "timelines",
	"version": "0.0.0",
	"license": "GPL-3.0-or-later",
	"description": "",
	"main": "dist/services/gaia/app.js",
	"subPackages": [
		"app/styx-frontend",
		"app/rhea-backend",
		"app/calliope-websockets"
	],
	"scripts": {
		"postinstall": "subpkg install && husky install",
		"build": "sh scripts/build.sh",
		"start": "node dist/services/gaia/src/app.js",
		"docker": "yarn docker:start",
		"docker:start": "docker compose -f docker-compose.common.yml -f docker-compose.yml up",
		"docker:build": "docker compose -f docker-compose.common.yml -f docker-compose.yml build",
		"docker:prod": "docker compose -f docker-compose.common.yml -f docker-compose.prod.yml up",
		"docker:prod:build": "docker compose -f docker-compose.common.yml -f docker-compose.prod.yml build",
		"docker:prod:push": "docker push tenebrie/timelines-gatekeeper && docker push tenebrie/timelines-styx && docker push tenebrie/timelines-rhea && docker push tenebrie/timelines-calliope"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"cloc": "^2.8.0",
		"eslint": "^7.13.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-unused-imports": "^1.1.4",
		"eslint-plugin-vue": "^7.1.0",
		"lint-staged": "^11.1.2",
		"nodemon": "^2.0.6",
		"pgmigrate": "^5.0.0",
		"prettier": "^2.2.1",
		"sass-loader": "^10.1.0",
		"subpackage": "^1.1.0",
		"typescript": "^4.0.5"
	},
	"lint-staged": {
		"*.(ts|vue|json)": "eslint --fix"
	},
	"engines": {
		"node": "16.x"
	},
	"author": "Tenebrie",
	"bugs": {
		"url": "https://github.com/Tenebrie/notgwent-game/issues"
	},
	"homepage": "https://github.com/Tenebrie/imbalance-game#readme",
	"devDependencies": {
		"husky": "^7.0.2"
	}
}
